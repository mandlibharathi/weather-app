    <title>WeatherReports</title>
</head>
<body>
        <div class="container">
    <section class="row mt-5 text-center">
    <div class="col-md-6 m-auto">
     <h1> <i class="fas fa-cloud-sun fa-2x"></i></h1>
 <h1 class="display-4">Weather Report!</h1>
         <p class="lead">
        Enter your city name to get a Weather.!
                        </p>
                <form action="/" method="post">
                <div class="form-group">
<input type="text" name="city" class="form-control" 
              placeholder="enter city">
                </div>
              <button type="submit" class="btn btn-primary btn-block ">
          Get Weather
              </button>
              </form>
              <br/><br/>
              <% if(weather!==null){ %> 
                <p class="mark"><%= weather %> </p>
                <%} else{%>

                  <p><%=error %></p>
                <%}%>

          </div>
          </section>
            </div>
</body>
